<script>
// Get the modal
var modal = document.getElementById('info');

// Get the button that opens the modal
var btn = document.getElementById("rdv");

// Get the <span> element that clozes the modal
var span = document.getElementById("cloze");

var x = document.getElementById("close");

// When the user clicks the button, open the modal 
btn.onclick = function() {
    modal.style.display = "block";
}

// When the user clicks on <span> (x), cloze the modal
span.onclick = function() {
    modal.style.display = "none";
}

x.onclick = function() {
    modal.style.display = "none";
}

// When the user clicks anywhere outside of the modal, cloze it
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>